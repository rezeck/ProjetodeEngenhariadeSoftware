<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mateuspalhares.projetodeengenhariadesoftware.Perguntas"
    android:weightSum="1"
    android:background="@drawable/bg2_8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txtQuestion"
        android:layout_weight="0.76"
        android:textSize="18dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22">

        <Button
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:id="@+id/btnA"
            android:layout_gravity="left|top"
            android:background="@drawable/ciano_a"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:id="@+id/btnC"
            android:layout_gravity="left|bottom"
            android:background="@drawable/ciano_c"
            android:layout_marginLeft="20dp" />

        <Button
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:id="@+id/btnD"
            android:layout_gravity="right|bottom"
            android:background="@drawable/ciano_d"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:id="@+id/btnB"
            android:layout_gravity="right|top"
            android:background="@drawable/ciano_b"
            android:layout_marginRight="20dp" />

    </FrameLayout>
</LinearLayout>
